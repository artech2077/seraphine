{
  "name": "seraphine",
  "private": true,
  "version": "0.0.1",
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=22.0.0 <23"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @seraphine/web dev",
